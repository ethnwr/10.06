<Window x:Class="GasStationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GasStationApp"
        mc:Ignorable="d"
        Title="Автозаправка" Height="450" Width="800">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Margin="10">
            <Label Content="Количество топлива (литры):"/>
            <TextBox x:Name="FuelAmountTextBox" ToolTip="Введите количество топлива для заправки"/>
            <Button Content="Заправить" ToolTip="Нажмите, чтобы заправить автомобиль"/>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding TimeDateString}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="{Binding CurrentDayOfWeek}" ToolTip="Текущий день недели"  />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
